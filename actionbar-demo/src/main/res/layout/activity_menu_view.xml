        android:id="@+id/button_menu_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="setWindowBackground"/>

    <Button
        android:id="@+id/button_menu_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="setBackgroundResource"/>

