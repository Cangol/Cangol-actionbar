        android:id="@+id/button_menu_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="setStatusBarTintColor"/>

    <Button
        android:id="@+id/button_menu_9"
        android:layout_width="wrap_content"
