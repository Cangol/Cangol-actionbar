<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/actionbar_popup_item_bg"
              android:orientation="horizontal"
              android:gravity="center_vertical"
    >

    <TextView
        android:id="@+id/actionbar_search_item_text"
        style="@style/ActionBarSearchItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

    <ImageView
        android:id="@+id/actionbar_search_item_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/actionbar_search_clear"
        android:padding="8dp"
        />
</LinearLayout>