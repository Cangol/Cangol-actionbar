<resources>

    <style name="ActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>
    <!-- ActionBar -->
    <style name="ActionBar">
        <item name="android:background">?attr/actionbar_background</item>
    </style>

    <style name="ActionBarTitle">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">?attr/actionbar_title</item>
        <!--
        <item name="android:shadowColor">@color/actionbar_title_shadow</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.5</item>
        -->
    </style>

    <style name="ActionBarItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:minWidth">@dimen/actionbar_item_min_width</item>
        <item name="android:background">?attr/actionbar_item_bg_selector</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ActionBarTextItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:minWidth">@dimen/actionbar_item_min_width</item>
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">?attr/actionbar_item_text</item>
        <item name="android:background">?attr/actionbar_item_bg_selector</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ActionBarIconItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:minWidth">@dimen/actionbar_item_min_width</item>
        <item name="android:background">?attr/actionbar_item_bg_selector</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ActionBarPopup">
        <item name="android:background">@drawable/actionbar_popup_bg</item>
    </style>

    <style name="ActionBarPopupItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:textSize">14.0sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">?attr/actionbar_popup_text</item>
    </style>

    <style name="ActionBarNavItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">?attr/actionbar_popup_text</item>
    </style>

    <style name="ActionBarSearchItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">?attr/actionbar_search_history_text</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="ActionBarRefresh">
        <item name="android:src">?attr/actionbar_refresh</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:minWidth">@dimen/actionbar_item_min_width</item>
        <item name="android:background">?attr/actionbar_item_bg_selector</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ActionBarTabItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:minWidth">@dimen/actionbar_item_min_width</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">?attr/actionbar_tab_text_selector</item>
        <item name="android:background">@drawable/actionbar_tab_bg_dark</item>
        <item name="android:padding">8dp</item>
        <item name="android:button">@null</item>
    </style>

    <style name="ActionBarSearchText">
        <item name="android:textColor">?attr/actionbar_search_text</item>
        <item name="android:textColorHint">?attr/actionbar_search_hint</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">4dp</item>
    </style>
</resources>